@using Microsoft.Extensions.Configuration
@model DateTime
@inject IConfiguration config

<div>
    @{
        var expiration = Model.AddDays(config.GetValue<int>("passwordExpirationDays"));
    }
    @if (DateTime.Now >= expiration)
    {
        <b class="text-danger"><i class="fas fa-exclamation-circle"></i> @expiration.ToShortDateString()</b>
    }
    else
    {
        if ((expiration - DateTime.Now).TotalDays <= 7)
        {
            <b class="text-warning"><i class="fas fa-exclamation-triangle"></i> @expiration.ToShortDateString()</b>
        }
        else
        {
            <b class="text-success"><i class="fas fa-check-circle"></i> @expiration.ToShortDateString()</b>
        }
    }
</div>